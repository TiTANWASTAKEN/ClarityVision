{
  "manifest_version": 3,
  "name": "Clarity Vision",
  "version": "1.1",
  "description": "A Chrome extension to help color-blind individuals see web pages better.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z" 
      },
      "description": "Open Clarity Vision"
    }
  }
}
