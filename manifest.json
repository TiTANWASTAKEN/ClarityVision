{
  "manifest_version": 3,
  "name": "Clarity Vision",
  "version": "1.1",
  "description": "A Chrome extension to help color-blind individuals see web pages better.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab"
     // You can specify specific domains like Udemy if needed
  ],
  "host_permissions": [
    "https://*/*"
  ]
}
