{
  "manifest_version": 3,
  "name": "Clarity Vision",
  "version": "1.2",

  "description": "A Chrome extension to help color-blind individuals see web pages better with enhanced color filters.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],
  "background ": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "toggle-protanopia": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Toggle Protanopia filter"
    },
    "toggle-deuteranopia": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "Toggle Deuteranopia filter"
    },
    "toggle-tritanopia": {
      "suggested_key": {
        "default": "Ctrl+Shift+T"
      },
      "description": "Toggle Tritanopia filter"
    },
    "reset-filters": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "Reset all filters"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}}
