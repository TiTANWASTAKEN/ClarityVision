{
  "manifest_version": 3,
  "name": "Clarity Vision",
  "version": "1.2",
  "description": "A Chrome extension to help color-blind individuals see web pages better with enhanced color filters.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z" 
      },
      "description": "Open Clarity Vision"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
